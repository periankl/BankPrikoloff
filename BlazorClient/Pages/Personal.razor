    public bool isTransaction = false;
    public string cardToTransact = "";
    public decimal TransactionAmount = 100;
    public async Task TransactionBetweenCards()
    {
        isTransaction = true;
        HttpClient client = new HttpClient();
        client.BaseAddress = new Uri("https://bankprikoloff.onrender.com/");
        if (selectedCard == null || string.IsNullOrEmpty(cardToTransact) || TransactionAmount <= 0 || cardToTransact.Count() != 16 || !cardToTransact.All(char.IsDigit))
        {
            ToastService.ShowError("Некорректные данные для перевода");
            isTransaction = false;
            return;
        }

        Account? accountFrom;
        try
        {
            accountFrom = await client.GetFromJsonAsync<Account>($"api/Account/id/{selectedCard.AccountId}");
        }
        catch
        {
            ToastService.ShowError("Счет отправителя не найден");
            isTransaction = false;
            return;
        }

        Card? cardTo;
        try
        {
            cardTo = await client.GetFromJsonAsync<Card>($"api/Card/by-number/{cardToTransact}");
            if(cardTo.Blocked){
                ToastService.ShowError("Карта получателя заблокирована");
                isTransaction = false;
                return;
            }
        }
        catch
        {
            ToastService.ShowError("Карта получателя не найдена");
            isTransaction = false;
            return;
        }

        Account? accountTo;
        try
        {
            accountTo = await client.GetFromJsonAsync<Account>($"api/Account/id/{cardTo.AccountId}");
        }
        catch
        {
            ToastService.ShowError("Счет получателя не найден");
            isTransaction = false;
            return;
        }

        if (accountFrom.Balance < TransactionAmount)
        {
            ToastService.ShowError("Недостаточно средств на счете отправителя");
            isTransaction = false;
            return;
        }
        
        accountFrom.Balance -= TransactionAmount;
        accountTo.Balance += TransactionAmount;

        var responseFrom = await client.PutAsJsonAsync("api/Account", accountFrom);
        if (!responseFrom.IsSuccessStatusCode)
        {
            ToastService.ShowError("Ошибка при обновлении баланса отправителя");
            isTransaction = false;
            return;
        }

        var responseTo = await client.PutAsJsonAsync("api/Account", accountTo);
        if (!responseTo.IsSuccessStatusCode)
        {
            ToastService.ShowError("Ошибка при обновлении баланса получателя");
            isTransaction = false;
            return;
        }

        ToastService.ShowSuccess("Перевод успешен");
        isTransactionVisible = false;
        isTransaction = false;
        cardToTransact = "";
        await LoadAccounts();
        await LoadCards();
    }

