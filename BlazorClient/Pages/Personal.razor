    public string FormatCardNumber(string numberOfCard)
    {
        // Проверяем, что строка не пустая
        if (string.IsNullOrEmpty(numberOfCard))
        {
            return string.Empty;
        }

        StringBuilder formattedNumber = new StringBuilder();

        for (int i = 0; i < numberOfCard.Length; i += 4)
        {
            formattedNumber.Append(numberOfCard.Substring(i, Math.Min(4, numberOfCard.Length - i)));

            if (i + 4 < numberOfCard.Length)
            {
                formattedNumber.Append(" ");
            }
        }

        return formattedNumber.ToString();
    }
